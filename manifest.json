{
  "name": "Chrome Web App Unread Count Badge",
  "version": "2.0.2",
  "manifest_version": 3,
  "description": "Unread count badge for Chrome Web App",
  "homepage_url": "https://github.com/luisliuchao/chrome-web-app-unread-count-badge",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "128": "icons/icon_128.png"
  },
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["src/content.js"]
    }
  ]
}
